<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#66FAF0D7"
    android:orientation="vertical"
    tools:context=".fragment.GroupListFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_grouplist"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#66FAF0D7">
        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="독서 모임"
            android:fontFamily="@font/fontstyle"
            android:textSize="30sp"
            android:textStyle="bold"/>
    </androidx.appcompat.widget.Toolbar>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/groupList_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#66FAF0D7"
        android:layout_below="@id/toolbar_grouplist"/>

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/btnReg_grouplist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:icon="@android:drawable/ic_input_add"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"/>

</RelativeLayout>